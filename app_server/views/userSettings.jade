extends layout

block content
	.settings.shadow
		form(action='', method='POST', enctype="multipart/form-data")
			fieldset
				legend #[strong User Settings]
				label Name
				br
				input(type='text', name='name', min='3', max='10', value='#{user.name}', required)
				br
				br
				label Avatar
				br
				if (user.avatar)
					img(src='/avatar', alt='Avatar' width=150, height=150)
				input(type='file', name='avatar')
				br
				br
				label Username
				br
				input(type='text', name='username', min='3', max='10', value='#{user.username}', required)
				br
				br
				label Age
				br
				input(type='date', name='age', min='1900-01-01', max='2003-01-01', value='#{user.dob}' required)
				br
				br
				label Location
				br
				br
				select(name='location')
					option(value='America') Americas
					option(value='Europe') Europe
					option(value='Asia') Asia
					option(value='Oceania') Oceania
					option(value='Africa') Africa
				br
				br
				input(type='submit' value='Save Changes')
		script(src='/javascripts/userSettings.js', type='text/javascript')
		script setSelected('#{user.location}');