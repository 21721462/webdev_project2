extends layout

block content
	.register.shadow
		p
			a(href='/register/steam') Register To Steam
		a(href="/")
		form(action='', method='POST', onsubmit='return validateForm()')
			fieldset
				legend #[strong Register]
				label Name
				br
				input(type='text', name='name', min='3', max='100',value='#{fullname}', required)
				br
				br
				label Username
				br
				input(type='text', name='username', min='3', max='100', value='#{username}', required)
				br
				br
				label Password
				br
				input(type='password', name='password', min='6', required)
				button(type='button', onclick='showPassword()') Toggle Password
				br
				br
				label Confirm Password
				br
				input(type='password', name='confirm-password', min='6', required)
				br
				br
				label Email Address
				br
				input(type='email', name='email', required)
				br
				br
				label Age
				br
				input(type='date', name='age', min='1900-01-01', max='2003-01-01' required)
				br
				br
				label Location
				br
				br
				select(name='location')
					option(value='America') Americas
					option(value='Europe') Europe
					option(value='Asia') Asia
					option(value='Oceania') Oceania
					option(value='Africa') Africa
				br
				br
				.gameselect
					input(type='checkbox', name='tf2')
					label#tf2(for ='tf2') 
					input(type='checkbox', name='csgo')
					label#csgo(for='csgo')
					input(type='checkbox', name='player')
					label#player(for='player')
					input(type='checkbox', name='h1z1')
					label#h1z1(for='h1z1')
					input(type='checkbox', name='gta5')
					label#gta5(for='gta5')
					input(type='checkbox', name='ark')
					label#ark(for='ark')
					input(type='checkbox', name='warframe')
					label#warframe(for='warframe')
					input(type='checkbox', name='rust')
					label#rust(for='rust')
					input(type='checkbox', name='dota2')
					label#dota2(for='dota2')

				input(type='submit' value='Submit')
				input(type='reset' value='Reset')
				ul#gamechoice
					

				if (error)
					p.error #{error}
		script(src='/javascripts/validate.js', type='text/javascript')
		script(src='/javascripts/userSettings.js', type='text/javascript')
		script setSelected('#{continent}');
		
